{
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": 0,
        "strict": 0
    },
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended"
}
