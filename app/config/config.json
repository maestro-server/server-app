{
    "i18n": {
        "contentPath": "path:./locales",
        "fallback": "en-US"
    },

    "middleware": {
        "appsec": {
            "priority": 110,
            "module": {
                "name": "lusca",
                "arguments": [
                    {
                        "csrf": false
                    }
                ]
            }
        },

        "static": {
            "module": {
                "arguments": [ "path:./.build" ]
            }
        },

        "router": {
            "module": {
                "arguments": [{ "directory": "path:./controllers" }]
            }
        },

        "json": {
            "enabled": true,
            "priority": 30,
            "module": {
                "name": "body-parser",
                "method": "json"
            }
        },

        "url-encoded": {
            "enabled": true,
            "priority": 30,
            "module": {
                "name": "body-parser",
                "method": "urlencoded",
                "arguments": [{"extended":true}]
            }
        },

        "filter": {
            "enabled": true,
            "priority": 40,
            "module": {
                "name": "content-filter",
                "arguments": [{"dispatchToErrorHandler": true}]
            }
        },

        "authenticated": {
            "enabled": true,
            "priority": 120,
            "module": {
                "name": "path:./middlewares/auth",
                "method": "initialize"
            }
        },

        "notFound": {
            "priority": 130,
            "module": "path:./middlewares/404"
        },

        "validatorResponse": {
            "priority": 135,
            "module": "path:./middlewares/validatorResponse"
        },

        "conflictResponse": {
            "priority": 136,
            "module": "path:./middlewares/conflicResponse"
        },

        "errorResponse": {
            "priority": 140,
            "module": "path:./middlewares/500"
        }

    }
}
