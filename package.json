{
    "name": "server-app",
    "version": "0.5.16",
    "description": "Server app - Maestro",
    "author": "Felipe Klerk Signorini &lt;felipeklerk@yahoo.com.br&gt;",
    "main": "server.js",
    "scripts": {
        "server": "nodemon -L server.js",
        "test": "mocha test/**/*js --timeout 5000 --reporter spec --exit",
        "e2e": "gulp test_e2e",
        "unit": "gulp test_unit",
        "lint": "gulp eslint",
        "tdd": "gulp tdd",
        "package": "docker build -t 'server-maestro' .",
        "docs-inventory": "gulp apidocs --name inventory",
        "docs-identity": "gulp apidocs --name identity",
        "docs-reports": "gulp apidocs --name reports",
        "docs-adminer": "gulp apidocs --name adminer",
        "docs-analytics": "gulp apidocs --name analytics",
        "docs": "gulp apidocs --name inventory && gulp apidocs --name identity && gulp apidocs --name reports && gulp apidocs --name adminer && gulp apidocs --name analytics",
        "coverage": "nyc --reporter=lcov mocha test/**/*js --timeout 5000 --exit",
        "migrate": "node ./node_modules/mongodb-migrate -runmm -cfg .migration-config.js up",
        "create_migrate": "node ./node_modules/mongodb-migrate -runmm create",
        "down_migrate": "node ./node_modules/mongodb-migrate -runmm -cfg .migration-config.js down",
        "demo_populate": "gulp test_populate_demo",
        "demo_destroy": "node ./node_modules/mongodb-migrate -runmm -c devtools/migration_demo/ -cfg .migration-config.js down"
    },
    "dependencies": {
        "app-module-path": "~2.2.0",
        "aws-sdk": "^2.429.0",
        "axios": "^0.18.0",
        "bcrypt": "^3.0.5",
        "bluebird": "~3.5.2",
        "body-parser": "^1.18.3",
        "co": "^4.6.0",
        "construx": "~1.0.1",
        "construx-copier": "~1.0.0",
        "content-filter": "~1.1.2",
        "dotenv": "^7.0.0",
        "express": "^4.16.4",
        "joi": "^14.3.1",
        "joi-objectid": "~2.0.0",
        "jwt-simple": "~0.5.3",
        "kraken-js": "^2.2.0",
        "lodash": "^4.17.11",
        "minipass": "^2.3.4",
        "mongodb-migrate": "~2.0.2",
        "mongorito": "~2.2.0",
        "nodemailer": "^4.6.8",
        "nodemailer-express-handlebars": "^3.0.0",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "safe-buffer": "^5.1.2",
        "yallist": "^3.0.2"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-deep-match": "^1.2.1",
        "chaid": "^1.0.2",
        "codacy-coverage": "^3.4.0",
        "codeclimate-test-reporter": "~0.5.0",
        "coveralls": "^3.0.3",
        "eslint": "^5.15.3",
        "gulp": "^4.0.0",
        "gulp-apidoc": "^0.2.8",
        "gulp-eslint": "^5.0.0",
        "gulp-load-plugins": "~1.5.0",
        "gulp-mocha": "^6.0.0",
        "minimist": "^1.2.0",
        "mocha": "^6.0.2",
        "mocha-lcov-reporter": "^1.3.0",
        "node-mocks-http": "^1.7.3",
        "nodemon": "^1.18.10",
        "nyc": "^13.3.0",
        "sinon": "^7.3.0",
        "supertest": "^4.0.2"
    }
}
